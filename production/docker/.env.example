# Example .env file for production
# Copy this to .env and configure your settings

# Logging Configuration
LOG_LEVEL=INFO                     # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
ENABLE_API_AUTH=false              # Set to true in production
# API_KEY=your-secure-api-key-here # Generate with: openssl rand -hex 32

# Production Mode
PRODUCTION_MODE=true               # Enables production optimizations

# Performance Tuning
MAX_WORKERS=4                      # Number of parallel workers
CACHE_SIZE=1000                    # Response cache size

# Model Configuration
PRIMARY_MODEL=data-science-specialist
FALLBACK_MODEL=mistral
FAST_MODEL=gemma3:1b

# Feature Flags
ENABLE_SELF_CORRECTION=true        # Enable self-correction
MAX_RETRIES=2                      # Maximum correction attempts

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
