# ==============================================================================
# VeraciRAG Environment Configuration
# ==============================================================================
# SECURITY: Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# LLM Provider Configuration (Groq - Cloud)
# ------------------------------------------------------------------------------
GROQ_API_KEY=your_groq_api_key_here

# ------------------------------------------------------------------------------
# API Security Configuration
# ------------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=change_this_to_a_secure_random_string
API_KEY_SALT=change_this_to_another_secure_random_string

# Enable/disable API key authentication
ENABLE_API_AUTH=true

# JWT token expiration (seconds)
JWT_EXPIRATION_SECONDS=3600

# ------------------------------------------------------------------------------
# Rate Limiting Configuration
# ------------------------------------------------------------------------------
# IP-based rate limits (requests per minute)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# User-based rate limits (requests per minute)  
USER_RATE_LIMIT_PER_MINUTE=30
USER_RATE_LIMIT_PER_HOUR=500

# Burst limit (max concurrent requests)
BURST_LIMIT=10

# ------------------------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ------------------------------------------------------------------------------
# Model Configuration
# ------------------------------------------------------------------------------
# Groq model to use (llama-3.3-70b-versatile, mixtral-8x7b-32768, etc.)
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# ------------------------------------------------------------------------------
# RAG Configuration
# ------------------------------------------------------------------------------
# Vector store settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_DOCUMENTS=5

# Relevance thresholds
RELEVANCE_THRESHOLD=0.6
FACTUAL_CONSISTENCY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.75

# Self-correction settings
MAX_RETRIES=3
ENABLE_SELF_CORRECTION=true

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/veracirag.log

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4
DEBUG=false

# ------------------------------------------------------------------------------
# Cache Configuration (Optional)
# ------------------------------------------------------------------------------
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ------------------------------------------------------------------------------
# Database Configuration (Optional - for persistence)
# ------------------------------------------------------------------------------
# DATABASE_URL=postgresql://user:pass@localhost:5432/veracirag
# REDIS_URL=redis://localhost:6379/0
